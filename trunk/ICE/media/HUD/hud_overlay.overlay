				char_height 38
				colour black
				caption 01
			}


		}

		container Panel(HUD/weapons_panel)
		{
			metrics_mode pixels
			horz_align right
			vert_align bottom
			left -90
			top -122
			width 90
			height 122
			material HUD/weapons_container_material

			container Panel(HUD/weapon_1_picture_panel)
			{
