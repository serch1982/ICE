				left 6
				top 20
				width 68
				height 62
				material HUD/face_2_material
			}

			container Panel(HUD/face_3_panel)
			{
				metrics_mode pixels
				left 6
				top 20
				width 68
				height 62
				material HUD/face_3_material
			}

			container Panel(HUD/face_4_panel)
			{
				metrics_mode pixels
				left 6
				top 20
				width 68
				height 62
				material HUD/face_4_material
			}

			container TextArea(HUD/player_name_text)
			{
				metrics_mode pixels
				left 83
				top 20
				width 90
				height 20

				font_name ObelixPro
				char_height 30
				colour black
				caption SCOTT
